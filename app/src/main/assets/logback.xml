<configuration>
    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <encoder>
            <pattern>
                %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="org.devfleet.zkillboard" level="DEBUG"/>
    <root level="ERROR">
        <appender-ref ref="logcat" />
    </root>
</configuration>